<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<Space
		android:id="@+id/center"
		android:layout_width="1dp" 
		android:layout_height="1dp" 
		android:layout_centerInParent="true"/>
	<DatePicker android:id="@+id/date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_above="@id/center" android:calendarViewShown="false" />
	<TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@id/date" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
</RelativeLayout>